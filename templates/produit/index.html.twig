{% extends 'base.html.twig' %}

{% block title %}Hello ProduitController!{% endblock %}

{% block body %}

<div class="container my-4">
    <h1 class="text-center mb-4">Boutique Symfony</h1>
    <div class="text-center mb-4">
        <a class="btn btn-info text-white" href="{{ path('panier') }}">Voir le panier</a>
    </div>
    <div class="row">
        {% for produit in produits %}
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">{{ produit.nom }}</h5>
                        <p class="card-text">Prix : {{ produit.prix }}â‚¬</p>
                        <a class="btn btn-info text-white" href="{{ path('ajouter_panier', {'id': produit.id}) }}">
                            Ajouter au panier
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

{% endblock %}
