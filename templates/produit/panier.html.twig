{% extends 'base.html.twig' %}

{% block body %}
<div class="example-wrapper">
    <h1>Votre Panier</h1>
    <a href="{{ path('produit_index') }}">Retour à la boutique</a>

    {% if panier is empty %}
        <p>Votre panier est vide.</p>
    {% else %}
        <ul>
            {% for produit in panier %}
                <li>
                    {{ produit.nom }} - {{ produit.prix }}€
                    <a href="{{ path('supprimer_panier', {'index': loop.index0}) }}">Supprimer</a>
                </li>
            {% endfor %}
        </ul>
        <p><strong>Total : {{ total }}€</strong></p>
    {% endif %}
</div>
{% endblock %}
